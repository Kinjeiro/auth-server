{
  "name": "@reagentum/auth-server",
  "version": "0.0.1",
  "description": "Front Core auth-server (OAuth2)",
  "publishConfig": {
    "registry": "http://npm.reagentum.ru/"
  },
  "scripts": {
    "start": "npm run start:localhost",
    "start:localhost": "nodemon --exec babel-node -- ./src/server.js",
    "start:localhost:mock": "npm run mongo:mock && npm run start:localhost",
    "build": "babel src -d dist",
    "start:build": "node dist/server.js",
    "test:build": "npm run build && npm run start:build",
    "mongo:mock": "node --require babel-register ./test/mock/generateDBData.js",
    "mongo:run:unix": "mongod --fork --port 27017 && npm run mongo:mock",
    "mongo:install:windows": "mongod --install --serviceName \"MongoDB\" --dbpath \"D:\\mongodb\\db\" --logpath \"D:\\mongodb\\logs\\mongo.log\"",
    "mongo:run:windows": "net start MongoDB && npm run mongo:mock",
    "mongo:stop:windows": "net stop MongoDB",
    "test": "cross-env NODE_ENV=test mocha --require babel-register ./test/test-runner.js",
    "test:watch": "npm run test -- --watch",
    "compile": "rimraf lib/* -f && babel src --out-dir lib --copy-files",
    "prepublish": "npm run compile",
    "publish-patch": "npm run release-patch && npm publish --access public",
    "release-patch": "npm version patch -m \"chore(*) patch version: %s\"",
    "release-minor": "npm version minor -m \"chore(*) minor version: %s\"",
    "release-major": "npm version major -m \"chore(*) major version: %s\"",
    "preversion": "npm run test",
    "postversion": "git add package.json && git commit -m \"new version\" && git push --follow-tags"
  },
  "dependencies": {
    "body-parser": "~1.8.x",
    "cookie-parser": "~1.3.x",
    "debug": "~2.0.x",
    "express": "~4.10.x",
    "glob": "~7.1.2",
    "lodash": "~4.17.4",
    "method-override": "~2.3.x",
    "mongoose": "~4.4.x",
    "morgan": "~1.8.2",
    "muri": "~1.2.2",
    "oauth2orize": "~1.0.x",
    "passport": "~0.2.x",
    "passport-http": "~0.2.x",
    "passport-http-bearer": "~1.0.x",
    "passport-oauth2-client-password": "~0.1.x",
    "rimraf": "~2.6.2",
    "validator": "~8.2.0",
    "winston": "~0.8.x",
    "cross-env": "~5.0.5",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-export-extensions": "~6.22.0",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.0"
  },
  "devDependencies": {
    "babel-cli": "~6.26.0",
    "babel-eslint": "~7.2.3",
    "chai": "~4.1.2",
    "chai-as-promised": "~7.1.1",
    "chai-http": "~3.0.0",
    "dirty-chai": "~2.0.1",
    "eslint": "~4.6.1",
    "eslint-config-airbnb-base": "~12.0.0",
    "eslint-plugin-import": "~2.7.0",
    "mocha": "~3.5.3",
    "nodemon": "~1.12.0",
    "sinon": "~3.2.1",
    "sinon-chai": "~2.13.0"
  }
}
